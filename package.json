{
  "name": "payment-gateway-service",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules src/server.ts",
    "migrate": "NODE_ENV=dev prisma migrate dev",
    "run:seed": "NODE_ENV=dev ts-node scripts/run-seed.ts",
    "undo:seed": "rm prisma/dev.db && rm prisma/dev.db-journal && yarn migrate",
    "lint:check": "eslint src/**/*.{js,ts,json}",
    "lint:fix": "eslint --fix src/**/*.{js,ts,json}",
    "prettier:check": "prettier --check src/**/*.{js,ts,json}",
    "prettier:fix": "prettier --write src/**/*.{js,ts,json} --config ./.prettierrc",
    "prisma:studio": "prisma studio --port 7878",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "posttest:coverage": "yarn open:coverage",
    "open:coverage": "node scripts/open-coverage.js",
    "setup:tests:ci": "node scripts/setup-tests-ci/index.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@types/mercadopago": "^1.5.8",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "2.0.4",
    "jest-ts-auto-mock": "^2.1.0",
    "prettier": "^2.7.1",
    "ts-auto-mock": "^3.6.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "ttypescript": "^1.5.13",
    "typescript": "*"
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mercadopago": "^1.5.14",
    "prisma": "^4.7.1"
  }
}
